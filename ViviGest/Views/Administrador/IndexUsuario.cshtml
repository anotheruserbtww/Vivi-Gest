@model IEnumerable<ViviGest.Dtos.usuariosDto>

@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Lista de Usuarios</h2>
    <a href="@Url.Action("CreateUsuario", "Administrador")" class="btn btn-primary">
        <i class="fa fa-plus me-2"></i> Crear Usuario
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Documento</th>
                <th>Correo electrónico</th>
                <th>Rol</th>
                <th class="text-center" style="width:120px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.id_usuario</td>
                    <td>@user.nombres</td>
                    <td>@user.apellidos</td>
                    <td>@user.numero_documento</td>
                    <td>@user.correo_electronico</td>
                    <td>@user.id_rol</td>
                    <td class="text-center">
                        <a href="@Url.Action("EditUsuario", "Administrador", new { id = user.id_usuario })"
                           class="btn btn-sm btn-warning me-1" title="Editar">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="@Url.Action("DeleteUsuario", "Administrador", new { id = user.id_usuario })"
                           class="btn btn-sm btn-danger" title="Eliminar"
                           onclick="return confirm('¿Estás seguro de eliminar este usuario?');">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
