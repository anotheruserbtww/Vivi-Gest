@model IEnumerable<ViviGest.Dtos.usuariosDto>

@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<style>
    .btn-primary {
        background-color: #ff4f5a !important;
        border-color: #ff4f5a !important;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #e0434b !important;
            border-color: #e0434b !important;
        }

    .table-dark {
        background-color: #ff4f5a !important;
        color: white !important;
    }

    .table thead th {
        font-weight: 600;
        color: white !important;
    }

    .table-hover tbody tr:hover {
        background-color: #e8e8e8 !important;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table-striped tbody tr:nth-of-type(even) {
        background-color: #ffffff;
    }

    .table td {
        vertical-align: middle;
        color: #333;
    }

    .table th, .table td {
        padding: 10px;
        text-align: center;
    }

    .table .btn {
        color: #fff;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0" style="color: #ff4f5a; font-weight: 700;">Lista de Usuarios</h2>
    <a href="@Url.Action("CreateUsuario", "Administrador")" class="btn btn-primary">
        <i class="fa fa-plus me-2"></i> Crear Usuario
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Documento</th>
                <th>Correo electrónico</th>
                <th>Rol</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.id_usuario</td>
                    <td>@user.nombres</td>
                    <td>@user.apellidos</td>
                    <td>@user.numero_documento</td>
                    <td>@user.correo_electronico</td>
                    <td>@user.id_rol</td>
                </tr>
            }
        </tbody>
    </table>
</div>
