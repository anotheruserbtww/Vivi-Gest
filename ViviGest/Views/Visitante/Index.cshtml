@model IEnumerable<ViviGest.Dtos.VisitanteDto>

@{
    ViewBag.Title = "Lista de Visitantes";
    Layout = "~/Views/Shared/_Layout_guarda.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Visitantes Registrados</h2>
        <a href="@Url.Action("Create")" class="btn btn-success">
            <i class="fas fa-plus"></i> Crear Nuevo
        </a>
    </div>

    <!-- Tabla con diseño atractivo -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover shadow-sm">
            <thead class="thead-dark bg-primary text-white">
                <tr>
                    <th>Nombre Completo</th>
                    <th>Tipo de Documento</th>
                    <th>Número de Documento</th>
                    <th>Destino</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var visitante in Model)
                {
                    <tr>
                        <td>@visitante.nombre_completo</td>
                        <td>@visitante.tipo_documento</td>
                        <td>@visitante.numero_documento</td>
                        <td>@visitante.destino</td>
                        <td class="text-center">
                            <!-- Botón de editar con icono -->
                            <a href="@Url.Action("Edit", new { id_visitante = visitante.id_visitante })" class="btn btn-sm btn-warning text-white me-2" data-toggle="tooltip" title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>
                            <!-- Botón de eliminar con icono -->
                            <a href="@Url.Action("Delete", new { id_visitante = visitante.id_visitante })" class="btn btn-sm btn-danger text-white" data-toggle="tooltip" title="Eliminar">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
