@model IEnumerable<ViviGest.Dtos.VisitanteDto>

@{
    ViewBag.Title = "Lista de Visitantes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Visitantes Registrados</h2>
        <a href="@Url.Action("Create")" class="btn btn-success">
            <i class="fas fa-plus"></i> Crear Nuevo
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Nombre Completo</th>
                    <th>Tipo de Documento</th>
                    <th>Número de Documento</th>
                    <th>Destino</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var visitante in Model)
                {
                    <tr>
                        <td>@visitante.nombre_completo</td>
                        <td>@visitante.tipo_documento</td>
                        <td>@visitante.numero_documento</td>
                        <td>@visitante.destino</td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", new { id_visitante = visitante.id_visitante })" class="btn btn-sm btn-warning me-2">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a href="@Url.Action("Delete", new { id_visitante = visitante.id_visitante })" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

