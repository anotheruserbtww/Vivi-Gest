@model IEnumerable<ViviGest.Dtos.usuariosDto>

@{
    ViewBag.Title = "Lista de Residentes";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<h2>Lista de Residentes</h2>

<a href="@Url.Action("Create")" class="btn btn-primary mb-3">Crear Nuevo Residente</a>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Número Documento</th>
            <th>Correo</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.id_usuario</td>
                <td>@r.nombres</td>
                <td>@r.apellidos</td>
                <td>@r.numero_documento</td>
                <td>@r.correo_electronico</td>
                <td>@r.telefono</td>
                <td>
                    <a href="@Url.Action("Details", new { id = r.id_usuario })" class="btn btn-info btn-sm">Ver</a>
                    <a href="@Url.Action("Edit", new { id = r.id_usuario })" class="btn btn-warning btn-sm">Editar</a>
                    <a href="@Url.Action("Delete", new { id = r.id_usuario })" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
